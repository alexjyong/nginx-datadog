#!/bin/sh

set -e

cd "$(dirname "$0")/.."

. ./defaults.conf.sh
. ./conf.sh

docker compose up --remove-orphans --detach --wait --build

bin/consume-stats >output/stats &
trap 'docker compose down; docker compose logs >output/logs' INT TERM

printf 'Running.  See output/stats and output/client.\n'

wait
